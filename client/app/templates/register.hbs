<div class="middle-column">
    <form class="form" {{action "register" on="submit"}}>
        <h2> Sign up to FindMe </h2>
        <hr>
        {{#if isProcessing}}
            <div class="alert alert-info">Attempting to register</div>
        {{/if}}
        {{#if registerFailed}}
            <div class="alert alert-danger control-alert">Registration failed: {{failedMessageEmail}}</div>
        {{/if}}
        {{#if registerFailedEmail}}
            <div class="alert alert-danger control-alert">Registration failed: {{failedMessageEmail}}</div>
        {{/if}}
        {{#if registerFailedUsername}}
            <div class="alert alert-danger control-alert">Registration failed: {{failedMessageUsername}}</div>
        {{/if}}
        {{#if registerFailedPassword}}
            <div class="alert alert-danger control-alert">Registration failed: {{failedMessagePassword}}</div>
        {{/if}}
        <div class="control-group">
            <div class="control-label">
                <label>Email address:</label>
            </div>
            <div class="controls">
                {{input value=email type="email"}}
            </div>
        </div>
        <div class="control-group">
            <div class="control-label">
                <label>Username:</label>
            </div>
            <div class="controls">
                {{input value=username type="text"}}
            </div>
        </div>
        <div class="control-group">
            <div class="control-label">
                <label>Password:</label>
            </div>
            <div class="controls">
                {{input value=password type="password"}}
            </div>
        </div>
        <div class="control-group">
            <div class="control-label">
                <label>Confirm password:</label>
            </div>
            <div class="controls">
                {{input value=passwordConfirmation type="password"}}
            </div>
        </div>
        <div class="control-group">
            <div class="control-label">
                <label>Security question:</label>
            </div>
            <div class="controls">
                {{input value=securityQuestion type="text"}}
            </div>
        </div>
        <div class="control-group">
            <div class="control-label">
                <label>Security answer:</label>
            </div>
            <div class="controls">
                {{input value=securityAnswer type="text"}}
            </div>
        </div>
        <div class="fill-width">
            <button type="submit" class="btn btn-margin-top btn-margin-bottom btn-primary btn-lg fill-width" {{bindAttr disabled="isProcessing"}}>
                Register!
            </button>
        </div>
        <div class="fill-width link-text">
            {{#link-to 'login'}}
                <a> Login </a>
            {{/link-to}}
        </div>
    </form>
</div>